# FIN Application Environment Configuration
# Copy this file to .env and fill in your actual values

# Production Database Configuration
DATABASE_URL=jdbc:postgresql://localhost:5432/drimacc_db
DATABASE_USER=your_db_username
DATABASE_PASSWORD=your_db_password

# Test Database Configuration
TEST_DATABASE_URL=jdbc:postgresql://localhost:5432/drimacc_test
TEST_DATABASE_USER=your_test_db_username
TEST_DATABASE_PASSWORD=your_test_db_password

# Email Configuration (Optional)
SMTP_HOST=your.smtp.host.com
SMTP_PORT=465
SMTP_USERNAME=your_email@domain.com
SMTP_PASSWORD=your_email_password
SMTP_AUTH=true
SMTP_TLS=false
SMTP_SSL=true

IMAP_HOST=your.imap.host.com
IMAP_PORT=993
IMAP_SSL=true

EMAIL_FROM=your_email@domain.com
EMAIL_FROM_NAME="Your Company Name"
EMAIL_CONTACT=contact@yourdomain.com
EMAIL_PHONE="+27 XX XXX XXXX"

# Application Configuration
JAVA_OPTS="-Xmx1g -Xms512m"
SPRING_PROFILES_ACTIVE=production

# License Configuration
FIN_LICENSE_AUTO_CONFIRM=false